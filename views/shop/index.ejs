<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/featured.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %>

   <main>
       
       <h1 class="welcome centered">Welcome to The Collection</h1>
       <h2 class="centered">Latest Product:</h2>
       <div class="featured-product">
            <h1 class="featured-title"><%= product.title %></h1>
            <img src="<%= product.imageUrl %>" alt="<%= product.title %>" class="featured-image">
            <h2 class="featured-author">By <%= product.authorName %></h2>
            <h2 class="featured-price">$<%= product.price %></h2>
            <p class="featured-description"><%= product.description %></p>
        </div>
        <div class="centered">
            <a href="/products/<%= product._id %>" class="btn featured-button">View Product Details</a>
        </div>
   </main>
   <%- include('../includes/end.ejs') %>