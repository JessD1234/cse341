<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %>

   <main>
    <form action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST" class="product-form">
        <div class="form-control">
            <label for="title">Title:</label>
            <input class="text-input" type="text" name="title" value="<% if (editing) { %><%= product.title%><% } %>">
            <label for="imageUrl">Image URL:</label>
            <input class="text-input" type="text" name="imageUrl"value="<% if (editing) { %><%= product.imageUrl%><% } %>">
            <label for="price">Price:</label>
            <input class="text-input" type="text" name="price" value="<% if (editing) { %><%= product.price%><% } %>">
            <label for="description">Description:</label>
            <textarea class="text-input" name="description" rows="5"><% if (editing) { %><%= product.description%><% } %></textarea>
        </div>
        <% if (editing) { %>
            <input type="hidden" value="<%=product.id %>" name="productId">
        <% } %>

        <button type="submit" class="btn"><% if (editing) { %>Update Product <% } else { %>Add Product<% } %></button>
    </form>
   </main>
<%- include('../includes/end.ejs') %>