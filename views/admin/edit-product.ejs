<body>
    <%- include('../includes/nav.ejs') %>

   <main>
    <form action="/admin/add-product" method="POST" class="product-form">
        <div class="form-control">
            <label for="title">Title:</label>
            <input class="text-input" type="text" name="title">
            <label for="imageUrl">Image URL:</label>
            <input class="text-input" type="text" name="imageUrl">
            <label for="price">Price:</label>
            <input class="text-input" type="text" name="price">
            <label for="description">Description:</label>
            <textarea class="text-input" name="description" rows="5"></textarea>
        </div>
        
        <button type="submit" class="btn">Add Product</button>
    </form>
   </main>
