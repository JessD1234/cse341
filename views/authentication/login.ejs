<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/authentication.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %>

   <main>
       
    <form action="/login" method="POST" class="login-form">
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
            <% } %>
        <div class="form-control">
            <label for="email">Email:</label>
            <input class="text-input <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>" type="email" name="email" value="<%= oldInput.email %>">
            <label for="password">Password:</label>
            <input class="text-input <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>" type="password" name="password" value="<%= oldInput.password %>">
        </div>
        <input type="hidden" value="<%= csrfToken %>" name="_csrf">
        <button type="submit" class="btn">Login</button>
    </form>
    <div class="reset-div">
        <p>Forgot your password? You can <a href="/reset-password">reset it here</a>.</p>
    </div>
   </main>
<%- include('../includes/end.ejs') %>